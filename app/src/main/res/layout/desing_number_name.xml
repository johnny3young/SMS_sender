<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editxt_msj_to_send"
            android:hint="Mensaje para enviar"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txtview_number_send"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="top"
            android:minLines="3"
            android:inputType="textMultiLine|textCapSentences|textNoSuggestions"/>
    <!--To avoid text and hint appearing in center vertically, use gravity="top"-->
    <!--To distinguish mltilineâ€™s UI from singleline, you might want to use minLines="3"-->
    <!--Use inputType="textMultiLine". textCapSentences and textNoSuggestions are nice options as well.-->

    <Button
            android:text="Enviar"
            android:drawableLeft="@android:drawable/sym_action_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_send_msj"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_mono"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editxt_msj_to_send"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_number_send"
            android:text="3122845783"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:padding="5dp"
            android:inputType="number"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_name_send"
            android:text="Johnny III Young"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="10dp"
            app:layout_constraintStart_toEndOf="@+id/txtview_number_send"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>

</android.support.constraint.ConstraintLayout>